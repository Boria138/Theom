#!/usr/bin/env python3

import sys
import os
import tomllib

CONFIG_PATH = os.path.expanduser("~/.config/theom/config.toml")

def load_config():
    try:
        with open(CONFIG_PATH, "rb") as f:
            return tomllib.load(f)
    except FileNotFoundError:
        print("ERROR: Config file not found.", file=sys.stderr)
        sys.exit(1)
    except tomllib.TOMLDecodeError as e:
        print(f"ERROR: Config parse error: {e}", file=sys.stderr)
        sys.exit(1)

def check_config(verbosity=False):
    try:
        with open(CONFIG_PATH, "rb") as f:
            loaded_config = tomllib.load(f)
    except FileNotFoundError:
        print("Problem encountered: Config file not found.", file=sys.stderr)
        sys.exit(1)
    except tomllib.TOMLDecodeError as e:
        print(f"Problem encountered: Config parse error: {e}", file=sys.stderr)
        sys.exit(1)

    if (loaded_config):
        print("Checkup succesful! No problems were found!")
        print("- Configuration syntax is correct.")
        if verbosity:
            print("- Parsed configuration:")
            print(loaded_config)
        sys.exit(0)

def get_nested(config, key_path):
    keys = key_path.split(".")
    for key in keys:
        if isinstance(config, dict) and key in config:
            config = config[key]
        else:
            return None
    return config

def update_value_in_file(key_path, new_value):
    with open(CONFIG_PATH, "r", encoding="utf-8") as f:
        lines = f.readlines()

    keys = key_path.split(".")
    if len(keys) != 2:
        print(f"ERROR: Only section.key is supported for safe editing", file=sys.stderr)
        sys.exit(1)

    section_name, target_key = keys
    in_section = False
    found = False

    for i, line in enumerate(lines):
        stripped = line.strip()

        if stripped.startswith("[") and stripped.endswith("]"):
            current_section = stripped[1:-1].strip()
            in_section = (current_section == section_name)
            continue

        if in_section and stripped.startswith(f"{target_key} ="):
            prefix, comment = line.split("=", 1)
            comment_part = ""
            if "#" in comment:
                value_part, comment_part = comment.split("#", 1)
                value_part = value_part.strip()
                comment_part = "  #" + comment_part.strip()
            else:
                value_part = comment.strip()

            # Handle quoting if original was quoted
            if value_part.startswith('"') and value_part.endswith('"'):
                new_value_str = f'"{new_value}"'
            elif value_part in ("true", "false"):
                new_value_str = new_value.lower()
            else:
                new_value_str = new_value

            lines[i] = f"{prefix.strip()} = {new_value_str}{comment_part}\n"
            found = True
            break

    if not found:
        print(f"ERROR: key not found or can't safely edit: {key_path}", file=sys.stderr)
        sys.exit(1)

    with open(CONFIG_PATH, "w", encoding="utf-8") as f:
        f.writelines(lines)

def main():
    args = sys.argv[1:]

    if not args:
        print_usage()
        sys.exit(1)

    cmd = args[0]

    if cmd == "--checkup" or cmd == "-c":
        test = args[1]
        if len(args) > 1:
            if args[1] == "--verbose":
                check_config(True)
        else:
            check_config(False)

    elif cmd == "--help" or cmd == "-h":
        print_usage()

    elif cmd == "set":
        if len(args) != 3:
            print("ERROR: Invalid usage of 'set'.\n")
            print("Usage: theom-config set <key_path> <new_value>")
            print("Example: theom-config set appearance.theme dark")
            sys.exit(1)

        key_path, new_value = args[1], args[2]
        update_value_in_file(key_path, new_value)

    elif len(args) == 1:
        key_path = args[0]
        config = load_config()
        value = get_nested(config, key_path)
        if value is None:
            print(f"ERROR: key not found: {key_path}", file=sys.stderr)
            sys.exit(1)
        elif isinstance(value, bool):
            print(str(value).lower())
        else:
            print(value)

    else:
        print_usage()
        sys.exit(1)


def print_usage():
    print("""Usage:
  theom-config <key_path>
      Get the value of a config key.

  theom-config set <key_path> <new_value>
      Set the value of a config key.

  theom-config --checkup, -c
      Check the config file for issues.

  theom-config --help, -h
      Show this message.

  - For more details, run `man theom-config` in the terminal.
""", file=sys.stderr)

if __name__ == "__main__":
    main()
